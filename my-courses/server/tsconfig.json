{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "outDir": "./build",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true
  }
}